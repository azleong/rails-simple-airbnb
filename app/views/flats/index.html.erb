<div class="row">
<% @flats.each do |flat| %>
  <div class="card col-3 m-3" style="width: 18rem;">
  <img class="card-img-top" src="https://source.unsplash.com/random/400x300" alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title"><%= link_to flat.name, flat_path(flat) %></h5>
    <p class="card-text"><%= flat.address %></p>
    <%= link_to "More info", flat_path(flat), class: "btn btn-primary" %>
    <%= link_to "Edit Flat", edit_flat_path(flat), class: "btn btn-warning" %>
    <%= link_to "Delete", flat_path(flat), method: :delete, data: { confirm: "Are you sure, asshole?"}, class: "btn btn-danger" %>
  </div>

  </div>
<% end %>
</div>

<div class="text-center">
  <%= link_to "List your flat", new_flat_path, class: "list-btn btn btn-success" %>
</div>

