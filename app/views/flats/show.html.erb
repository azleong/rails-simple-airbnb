<h2><%= @flat.name %></h2>
<p><%= @flat.address %></p>
<p><%= @flat.description %></p>
<p><%= @flat.price_per_night %></p>
<p><%= @flat.number_of_guests %></p>

<%= link_to "Edit Flat", edit_flat_path(@flat), class: "btn btn-info" %>

<%= link_to "Back to Airbnb", flats_path, class: "btn btn-success"%>

<%= link_to "Delete", flat_path(@flat), method: :delete, data: { confirm: "Are you sure, asshole?"}, class: "btn btn-danger" %>